<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Passport Quest</title>
    <!-- Local CSS -->
    <link rel="stylesheet" href="./css/reset.css" />
    <link rel="stylesheet" href="./css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Comic+Neue&family=Fuzzy+Bubbles&family=Rock+Salt&display=swap"
      rel="stylesheet"
    />
    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

  </head>

  <body>
    <header>
      <h1 id="title-name">Passport Quest</h1>
    </header>
    <nav>
      <div class="navbar">
        <a class="jump" href="#about-me">Log In</a>
        <a class="jump" href="#software">About Us</a>
        <a class="jump" href="#graphics">Help</a>
      </div>
    </nav>

    <main>
      <section class="card">
        <h3 id="search-title">Search for a blog</h3>
        <div>
          <h4 id="search-parameter">Search By:</h4>

          <div id="input-search-parameter">
            <label for="usernamesearch">
              <input
                type="radio"
                id="usernamesearch"
                name="search"
                value="username"
              />
              Username</label>

            <label for="citysearch">
              <input type="radio" id="citysearch" name="search" value="city" />
              City</label>

            <label for="countrysearch">
              <input
                type="radio"
                id="countrysearch"
                name="search"
                value="country"
              />
              Country</label>

            <label for="foodsearch">
              <input type="radio" id="foodsearch" name="search" value="food" />
              Food</label>
          </div>
        </div>
        <input type="text" id="searchbar" placeholder="search..." />
      </section>
    </main>
  </body>
</html>